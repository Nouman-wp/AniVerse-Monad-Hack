<%- include('../partials/header', { title: 'AniVerse - Modern Anime NFT Platform' }) %>
<%- include('../partials/navbar', { currentPage: 'home' }) %>

<!-- Hero Section -->
<section class="hero">
  <div class="hero-background">
    <div class="floating-element element-1"></div>
    <div class="floating-element element-2"></div>
    <div class="floating-element element-3"></div>
  </div>
  
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">
        Welcome to <span class="gradient-text">AniVerse</span>
      </h1>
      <p class="hero-subtitle">
        Trade Anime NFTs. Play games. Earn rewards. Join the NFT battleground.
      </p>
      <div class="hero-actions">
        <a href="/marketplace" class="btn gradient-btn btn-large">
          <span>Explore Marketplace</span>
          <i class="fas fa-arrow-right"></i>
        </a>
        <a href="/airdrop" class="btn secondary-btn btn-large">
          <span>Claim Free NFT</span>
          <i class="fas fa-bolt"></i>
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Stats Section -->
<section class="stats-section">
  <div class="container">
    <div class="stats-grid">
      <div class="stat-card" data-aos="fade-up" data-aos-delay="100">
        <div class="stat-icon">
          <i class="fas fa-users"></i>
        </div>
        <div class="stat-value" data-count="50000">0</div>
        <div class="stat-label">Active Users</div>
      </div>
      
      <div class="stat-card" data-aos="fade-up" data-aos-delay="200">
        <div class="stat-icon">
          <i class="fas fa-chart-line"></i>
        </div>
        <div class="stat-value" data-count="2.5">0</div>
        <div class="stat-label">Trading Volume (M)</div>
      </div>
      
      <div class="stat-card" data-aos="fade-up" data-aos-delay="300">
        <div class="stat-icon">
          <i class="fas fa-star"></i>
        </div>
        <div class="stat-value" data-count="15000">0</div>
        <div class="stat-label">NFTs Traded</div>
      </div>
      
      <div class="stat-card" data-aos="fade-up" data-aos-delay="400">
        <div class="stat-icon">
          <i class="fas fa-gamepad"></i>
        </div>
        <div class="stat-value" data-count="25">0</div>
        <div class="stat-label">Games Available</div>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="features-section">
  <div class="container">
    <div class="section-header">
      <h2>Why Choose AniVerse?</h2>
      <p>Experience the future of anime NFTs with cutting-edge features designed for collectors and gamers.</p>
    </div>
    
    <div class="features-grid">
      <div class="feature-card" data-aos="fade-up" data-aos-delay="100">
        <div class="feature-icon">
          <i class="fas fa-shield-alt"></i>
        </div>
        <h3>Secure Trading</h3>
        <p>Advanced blockchain security ensures safe and transparent NFT transactions.</p>
        <div class="feature-hover">
          <i class="fas fa-arrow-right"></i>
        </div>
      </div>
      
      <div class="feature-card" data-aos="fade-up" data-aos-delay="200">
        <div class="feature-icon">
          <i class="fas fa-gamepad"></i>
        </div>
        <h3>Play & Earn</h3>
        <p>Engage in exciting anime-themed games and earn valuable rewards.</p>
        <div class="feature-hover">
          <i class="fas fa-arrow-right"></i>
        </div>
      </div>
      
      <div class="feature-card" data-aos="fade-up" data-aos-delay="300">
        <div class="feature-icon">
          <i class="fas fa-bolt"></i>
        </div>
        <h3>Instant Rewards</h3>
        <p>Get instant rewards and airdrops for participating in the platform.</p>
        <div class="feature-hover">
          <i class="fas fa-arrow-right"></i>
        </div>
      </div>
    </div>
  </div>
</section>

